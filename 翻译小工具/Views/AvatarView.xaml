<UserControl x:Class="翻译小工具.Views.AvatarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:翻译小工具.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:vm="clr-namespace:翻译小工具.ViewModels"
             d:DataContext="{d:DesignInstance vm:AvatarViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="Lavender">
    <Border Height="160" Width="160" CornerRadius="75"  Style="{StaticResource ImageBorderStyle}">
        <Image Height="150" Width="150"  Source="../Resource/Avatars/Elysia-illustration.png">
            <Image.Clip>
                <EllipseGeometry Center="75 75" RadiusX="75" RadiusY="75"></EllipseGeometry>
            </Image.Clip>
        </Image>
    </Border>
</UserControl>
